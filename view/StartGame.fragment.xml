<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      title="Start new game">
   	<content>
   		<VBox alignItems="Center">
   		<Button text="2 players" press="startNewGame($event, 2)" icon="sap-icon://customer"/>
   		<Button text="3 players" press="startNewGame($event, 3)" icon="sap-icon://customer"/>
   		<Button text="4 players" press="startNewGame($event, 4)" icon="sap-icon://customer"/>
   		</VBox>
   	</content>
   </Dialog>
</core:FragmentDefinition>